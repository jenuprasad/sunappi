<resources>

    <!-- Base application theme. -->
    <style name="MobileID" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
    </style>

    <!-- Reveal transition colors -->
    <color name="color_set_1_primary">#4fc3f7</color>
    <color name="color_set_1_accent">#009688</color>

    <color name="color_set_2_primary">#42bd41</color>
    <color name="color_set_2_accent">#673AB7</color>

    <color name="color_set_3_primary">#ffb74d</color>
    <color name="color_set_3_accent">#ffe7000a</color>

    <color name="color_set_4_primary">#ff8a65</color>
    <color name="color_set_4_accent">#d500f9</color>
    <color name="photo_tint">#88101010</color>
    <color name="textcolour">#88000000</color>
    <color name="grey">#1A2574A9</color>


    <!-- DEMO -->
    <color name="primary">@color/theme_primary</color>
    <color name="primary_dark">@color/theme_primary_dark</color>
    <color name="accent">@color/theme_accent</color>
    <color name="text_primary">#D9FFFFFF</color>
    <color name="light_gray">#E0E0E0</color>
    <color name="text_secondary">#D9000000</color>
    <color name="overlay">#33000000</color>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
    <style name="Mid.Button" parent="@android:style/Widget.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/sunappi_button</item>
    </style>
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#FFCC00</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:background">#5fa3d0</item>
    </style>
</resources>
