
<resources>

    <!-- Base application theme. -->
    <style name="MobileID" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
    </style>

    <!-- Reveal transition colors -->
    <color name="color_set_1_primary">#4fc3f7</color>
    <color name="color_set_1_accent">#009688</color>

    <color name="color_set_2_primary">#42bd41</color>
    <color name="color_set_2_accent">#673AB7</color>

    <color name="color_set_3_primary">#ffb74d</color>
    <color name="color_set_3_accent">#ffe7000a</color>

    <color name="color_set_4_primary">#ff8a65</color>
    <color name="color_set_4_accent">#d500f9</color>
    <color name="photo_tint">#88101010</color>
    <color name="textcolour">#88000000</color>



    <!-- Indigo -->
    <color name="primary">@color/theme_primary</color>
    <color name="primary_dark">@color/theme_primary_dark</color>
    <color name="accent">@color/theme_accent</color>
    <color name="text_primary">#D9FFFFFF</color>
    <color name="text_secondary">#D9000000</color>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

</resources>
